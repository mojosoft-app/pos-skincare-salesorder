# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=pine_energy_db
DB_SSLMODE=disable
DB_TIMEZONE=UTC

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-so-service
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=168h
JWT_ISSUER=pos-mojosoft

# Server Configuration
SERVER_PORT=8082
